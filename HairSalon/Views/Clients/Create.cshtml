@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>New Client</h1>

@using (Html.BeginForm())
{

    @Html.LabelFor(model=>model.Stylist)
    @Html.DropDownList("StylistId") 
    @Html.LabelFor(model=> model.ClientName)
    @Html.TextBoxFor(model=> model.ClientName, new { @class = "form-control",required="required"})
    @Html.LabelFor(model=> model.PhoneNumber)
    @Html.TextBoxFor(model=> model.PhoneNumber, new {required = "required"})

  <input type="submit" value = "Save client"/>

}

<p class="link">@Html.ActionLink("Salon Home Page", "Index", "Home")</p>
<p class="link">@Html.ActionLink("Back to client list", "Index")</p>
