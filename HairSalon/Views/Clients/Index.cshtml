@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Stylists!</h1>

@if (Model.Count == 0){

<h2>No Clients!</h2>
} 
@foreach(Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) | @client.Stylist.Name </li>
}
<p class="link">@Html.ActionLink("Add new client", "Create")</p>
<hr />
<p class = "link">@Html.ActionLink("Go to Homepage", "Index", "Home")</p>
